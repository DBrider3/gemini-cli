{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["DOM", "DOM.Iterable", "ES2021"],
    "composite": true,
    "types": ["node", "vitest/globals"],
    "skipLibCheck": true,
    "noEmitOnError": false
  },
  "include": ["index.ts", "src/**/*.ts", "src/**/*.json"],
  "exclude": [
    "node_modules", 
    "dist", 
    "src/**/*.test.ts", 
    "src/**/*.test.tsx",
    "src/code_assist/**/*",
    "src/test-utils/**/*"
  ]
}
